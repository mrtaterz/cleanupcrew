    XScale 0.34//.17
    renderstyle translucent
    Alpha 0.3//.5
    -Randomize
    +NOTARGET
    +NOCLIP
    +NOBLOCKMAP
    -SOLID
    -SHOOTABLE
    +RIPPER
	+CLIENTSIDEONLY
    States
    {
      Spawn:
        PUF5 ABC 2 Bright ThrustThingZ(0, 1, 0, 0) 
        PUF5 DEFGH 2 ThrustThingZ(0, 1, 0, 0) 
