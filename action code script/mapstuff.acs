//stuff for maps scripting that's it
script US_MOVEBARREL (void) //note the name is a const instead of a string
{
	//SetActivator(0,AAPTR_TARGET);
	delay(1);
	if(checkinventory("powerbarrelnoisecooldown") > 0)
	{
		terminate;
	}
	fixed x = getactorvelx(0);
	fixed y = getactorvely(0);
	fixed z = getactorvelz(0);
	
	fixed silly = fixedsqrt((x*x + y*y + z*z));
	//silly = silly >> 16;
	//printbold(i:silly);
	if(silly > 32.0)
	{
		playsound(0,"misc/barrelmove");
		giveinventory("powerbarrelnoisecooldown",1);
	}
}

script "barrelspecial" (void) //callable
{
	SetThingSpecial(0,ACS_ExecuteWithResult,US_MOVEBARREL);
}

Script "chairspe" (void)
{
	if(checkinventory("ChairNoiseCooldown") > 0)
	{
		terminate;
	}
	playsound(0,"misc/chairmove");
	giveinventory("ChairNoiseCooldown",1);
	delay(24);
	terminate;
}
